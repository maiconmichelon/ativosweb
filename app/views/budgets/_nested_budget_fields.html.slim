h4 = t_and_pluralize_model('budget')

table class = 'table'
  thead
    th = t_attribute('budget.date')
    th = t_attribute('budget.value')
    th = t_attribute('budget.provider')
    th = t_attribute('budget.observation')
    th
  tbody id = "body"
    = f.simple_fields_for :budgets do |fields_for|
       = render '/budgets/budget_fields', :f => fields_for
.links
  = link_to_add_association t('helpers.links.add'), f, :budgets, class: 'btn btn-sm btn-success', 'data-association-insertion-node' => '#body', 'data-association-insertion-method' => :append, partial: '/budgets/budget_fields'
