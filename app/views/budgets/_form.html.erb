<%= simple_form_for @budget, html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :description %>
  <%= f.input :date, as: :bootstrap_datepicker %>
  <%= f.input :value %>
  <%= f.association :person %>
  <%= f.association :fixture %>
  <%= f.association :provider %>

  <%= f.submit class: 'btn btn-primary' %>
  <%= back_button budgets_path %>

<% end %>
