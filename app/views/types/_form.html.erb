<%= form_for @type, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :initial_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :initial_code, :class => 'text_field' %>
    </div>
  </div>

  <div class = "fields">
    <%= f.fields_for :components do |builder| %>
      <%= render "component_fields", f: builder %>
    <% end %>
    <%= link_to_add_fields t(".add_component"), f, :components %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                types_path, :class => 'btn' %>
  </div>
<% end %>
