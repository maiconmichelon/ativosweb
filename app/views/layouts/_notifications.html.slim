- pending_requests = current_user.decorate.pending_requests
- unless pending_requests.empty?
  li.notification-dropdown.hidden-xs.hiddem-sm
    a href = "#" class = "trigger"
      i.fa.fa-exclamation-triangle.icon-warning-sign
      span.count = pending_requests.size
    .pop-dialog
      .pointer.right
        .arrow
        .arrow_border
      .body
        a href = "#" class = "close-icon"
          i.fa.fa-times-circle
        .notifications
          h3 = t('layout.you_have_notifications', number: pending_requests.size)
          - pending_requests.each do |request| 
            a.item href = url_for([request.company, request])
              = request.title
              span.time
                i.fa.fa-calendar
                  = "  " + l(request.date)