<tr class="fields">
  <% attributes.each do |attr| %>
    <% type = f.object.reflections[attr].nil? ? :input : :association %>
    <%= f.send type, attr, label: false, wrapper: :nested %>
  <% end %>

  <td>
    <%= link_to_remove_association t('helpers.links.destroy'),
          f,
          class: "btn btn-mini btn-danger",
          wrapper_class: 'fields' %>
  </td>
</tr>
