<%= simple_form_for @maintenance, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :description %>
  <%= f.input :date, as: :bootstrap_datepicker %>
  <%= f.input :value %>
  <%= f.association :person %>

  <%= render 'layouts/nested_form',
      f: f,
      association: :budget_maintenances,
      attributes: [:budget] %>

  <%= f.submit class: 'btn btn-primary' %>
  <%= back_button maintenances_path %>
<% end %>
