<h1><%= t 'layout.login' %></h1>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag t('activerecord.attributes.user.email') %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag t('activerecord.attributes.user.password') %><br />
    <%= password_field_tag :password %>
  </p>
  <p class="button"><%= submit_tag t('layout.signin') %></p>
<% end %>
